                <ol class="checklist">
                    <li><input type="checkbox" id="shipping1"><label for="shipping1">Envio 1</label></li>
                    <li><input type="checkbox" id="shipping2"><label for="shipping2">Envio 1</label></li>
                </ol>
            </div>
