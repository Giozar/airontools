        <!-- Controles -->
            <div class="controls">
                <div class="search-box">
                    <input type="text" id="search" placeholder="Buscar...">
                    <button type="button">Buscar</button>
                </div>
                <div class="sort">
                    <label for="sort">Ordenar por:</label>
                    <select id="sort">
                        <option value="name">Nombre</option>
                        <option value="date">Fecha</option>
                        <option value="price">Precio</option>
                    </select>
                </div>
                <div class="pagination">
                    <button type="button" class="prev">‹ Anterior</button>
                    <button type="button" class="next">Siguiente ›</button>
                </div>
            </div>
        

        <!-- Contenido -->
        <ol class="show-content">
            <ImageHolder imageSrc={imagen} imageAlt='Herramientas de balancines' imageTitle='Accesorios' />
            <ImageHolder imageSrc={imagen} imageAlt='Herramientas de balancines' imageTitle='Atornilladores' />
