                    <li><input type="checkbox" id="category7"><label for="category7">Categoria 1</label></li>
                    <li><input type="checkbox" id="category8"><label for="category8">Categoria 1</label></li>
                </ol>
            </div>
        </div>
        <div class="show-hero">
            <div>
                <h1>Especificaciones</h1>
                <hr>
                <ol class="checklist">
                    <li><input type="checkbox" id="category1"><label for="category1">Categoria 1</label></li>
                    <li><input type="checkbox" id="category2"><label for="category2">Categoria 1</label></li>
                    <li><input type="checkbox" id="category3"><label for="category3">Categoria 1</label></li>
