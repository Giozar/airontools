---
import Image from "astro/components/Image.astro";

const {imageSrc, imageAlt, imageTitle} = Astro.props;
---
<figure class="carousel__item">
    <Image class="carousel__item-image" src={imageSrc} alt={imageAlt} width={100} height={100}/>
    <div class="carousel__item-text">
        <a href="shop">{imageTitle}</a>
    </div>
</figure>
